<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvRecipeItem"
    style="@style/StyleCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/linearLayoutItemRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivItemRecipeImage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:contentDescription="@string/start_of_text_for_card_recipe_content_description"
            android:scaleType="centerCrop"
            tools:src="@drawable/burger_mushrooms" />

        <TextView
            android:id="@+id/tvItemRecipeName"
            style="@style/StyleItemCategory14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            tools:text="Бургер с грибами и сыром" />

    </LinearLayout>

</androidx.cardview.widget.CardView>