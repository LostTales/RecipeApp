<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvCategoryItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/rv_and_cv_item_categories_margin_horizontal_dim"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/main_background_color"
    app:cardCornerRadius="@dimen/cv_item_category_card_corner_radius_dim">

    <LinearLayout
        android:id="@+id/linearLayoutItemCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivItemCategoryImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/item_image_in_the_categories_section"
            android:scaleType="centerCrop"
            tools:src="@drawable/burger" />

        <TextView
            android:id="@+id/tvItemCategoryName"
            style="@style/StyleItemCategory14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tv_name_and_description_item_category_layout_margin_dim"
            android:layout_marginTop="@dimen/tv_name_and_description_item_category_layout_margin_dim"
            tools:text="БУРГЕРЫ" />

        <TextView
            android:id="@+id/tvItemCategoryDescription"
            style="@style/StyleItemCategoryDescription12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tv_name_and_description_item_category_layout_margin_dim"
            tools:text="Рецепты всех популярных видов бургеров" />

    </LinearLayout>

</androidx.cardview.widget.CardView>