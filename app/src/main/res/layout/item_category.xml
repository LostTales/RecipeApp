<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvCategoryItem"
    style="@style/StyleCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/linearLayoutItemCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivItemCategoryImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iv_item_category_image_layout_height_dim"
            android:contentDescription="@string/item_image_in_the_categories_section"
            android:scaleType="centerCrop"
            tools:src="@drawable/burger" />

        <TextView
            android:id="@+id/tvItemCategoryName"
            style="@style/StyleItemCategory14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="БУРГЕРЫ" />

        <TextView
            android:id="@+id/tvItemCategoryDescription"
            style="@style/StyleItemCategoryDescription12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Рецепты всех популярных видов бургеров" />

    </LinearLayout>

</androidx.cardview.widget.CardView>